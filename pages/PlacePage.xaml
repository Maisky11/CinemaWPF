<Page x:Class="CinemaWPF.pages.PlacePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaWPF.pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="370" d:DesignWidth="600"
      Title="PlacePage">

    <Grid Background="#FF5F539A">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="placePanel" Grid.Row="1" Margin="10">
        </StackPanel>
        <StackPanel Background="#FF7F71C3">
            <TextBlock x:Name="textBlockMain" Text="Зал" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Margin="0,3,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Background="#FF7F71C3" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                <Button Content="Назад" Margin="0,0,10,0" Click="BackButton_Click" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
